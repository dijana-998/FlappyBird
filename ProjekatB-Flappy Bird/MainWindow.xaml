<Window x:Class="ProjekatB_Flappy_Bird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatB_Flappy_Bird"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="MainWindow" Height="490" Width="525" WindowStartupLocation="CenterScreen">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Border BorderThickness="1" BorderBrush="Black">
        <Grid>
            <Image Source="Slike/initial.jpg" Stretch="Fill"/>
            <StackPanel>
                <Button Name="exitButton" Height="64" Width="69" Margin="380,10,10,10" Click="exit_Click" Background="Transparent" BorderBrush="Transparent" Padding="0">
                    <Image Source="Slike/exit.png" Height="54" Width="52"/>
                </Button>
            </StackPanel>
            <StackPanel>
                <Button Name="informationButton" Height="64" Width="69" Margin="380,100,10,10" Click="instruction_Click" Background="Transparent" BorderBrush="Transparent" Padding="0">
                    <Image Source="Slike/information.png"/>
                </Button>
            </StackPanel>
            <StackPanel>
                <Button  Name="scoreButton" Height="64" Width="69" Margin="380,190,10,10" Click="score_Click" Background="Transparent" BorderBrush="Transparent" Padding="0">
                    <Image Source="Slike/score.png"/>
                </Button>
            </StackPanel>
            <StackPanel>
                <Button Name="playButton" Height="106" Width="99" Margin="-200,260,10,10" Click="play_Click" Background="Transparent" BorderBrush="Transparent" Padding="0">
                    <Image Source="Slike/play.png" Height="100"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
