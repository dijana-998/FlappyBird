<Window x:Class="ProjekatB_Flappy_Bird.Instructions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatB_Flappy_Bird"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Instructions" Height="400" Width="450" WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Border BorderThickness="1" BorderBrush="Black">
        <Grid>
        <Image Source="Slike/background.jpg" Stretch="Fill"/>
        <TextBlock TextWrapping="Wrap" FontStyle="Italic" FontWeight="Medium" FontSize="25" Margin="33,47,47,108"><Run Text="Use Space on your keyboard "/><LineBreak/><Run Text="to make the bird fly up. Let Space make the bird fall down. Pass between the obstacles (pipes) without hitting them. Every time you cross an obstacle, you get a point."/></TextBlock>
        <StackPanel>
            <Button Name="eButton" Click="exit_Click" Background="Transparent" BorderBrush="Transparent" Padding="0" Height="60" Width="52" Margin="390,0,0,0">
                <Image Source="Slike/exit.png"/>
            </Button>
        </StackPanel>
    </Grid>
    </Border>
</Window>
